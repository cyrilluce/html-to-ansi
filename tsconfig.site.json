{
  "include": ["site/**/*.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    
    "composite": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./site",
    "outDir": "./site-dist",
    "paths": {
      "html2ansi": [
        "./dist"
      ]
    }
  }
}
