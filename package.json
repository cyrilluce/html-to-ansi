{
  "name": "html2ansi",
  "version": "0.0.1",
  "description": "Convert HTML to ANSI colored text",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "html2ansi": "dist/bin.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "prebuild": "rm -f tsconfig.tsbuildinfo",
