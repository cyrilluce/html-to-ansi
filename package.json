  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.5.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.4",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "debug": "^4.3.7",
    "htmlparser2": "^9.1.0"
