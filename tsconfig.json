{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "esModuleInterop": true,

    "declaration": true,
    
    "composite": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
